<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="haui.lethanhha.com.mothercare.activity.AnUongDetailActivity"
    android:orientation="vertical"
    android:background="@drawable/background_danhmuc"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/sc_anuong_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <TextView
            android:id="@+id/tv_an_uong_detail"
            android:fontFamily="@font/myriadpro_semibold"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </ScrollView>

</LinearLayout>
